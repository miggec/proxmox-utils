# curl https://raw.githubusercontent.com/miggec/proxmox-utils/refs/heads/main/debian-template-boilerplate | bash -s -- -h NEWHOSTNAME

while getopts n: opts; do
   case ${opts} in
      n) NEWNAME=${OPTARG} ;;
   esac
done

echo "Changing hostname from $HOSTNAME to $NEWNAME"

rm -f /var/lib/dbus/machine-id
rm -f /etc/machine-id
dbus-uuidgen --ensure=/etc/machine-id
ln -s /etc/machine-id /var/lib/dbus/

ssh-keygen -f /etc/ssh/ssh_host_rsa_key -N '' -t rsa -y
ssh-keygen -f /etc/ssh/ssh_host_dsa_key -N '' -t dsa -y
ssh-keygen -f /etc/ssh/ssh_host_ecdsa_key -N '' -t ecdsa -b 521 -y

sed -i 's/$HOSTNAME/$NEWNAME/g' /etc/hosts
sed -i 's/$HOSTNAME/$NEWNAME/g' /etc/hostname
hostnamectl set-hostname "$NEWNAME"
